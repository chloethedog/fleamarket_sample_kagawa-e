          .Form__Group
            %label.Category 市区町村
            %span.Sticker 必須
            %input.Input__Default{name: "email", placeholder: "例）高松市"}  
          .Form__Group
            %label.Category 番地
            %span.Sticker 必須
            %input.Input__Default{name: "email", placeholder: "例）サンポート2-1"}  
          .Form__Group
            %label.Category 建物名
            %span.Sticker__Any 任意
            %input.Input__Default{name: "email", placeholder: "例）高松シンボルタワータワー棟4・5階"}  
          .Form__Group
            %label.Category 電話番号
            %span.Sticker 必須
            %input.Input__Default{name: "email", placeholder: "例）0878220111"}  
          .Form__Group
            %label
              = link_to '登録する','#',class: "Category__T"
    = render "purchases/footer"
