.ListingItems
  .ListingItems__header
    = render "purchases/header"
  .ListingItems__main
    .ListingForm
      .ListingPics
        %label 出品画像
        %span.Required 必須
        %p.Pics-max5 最大5枚までアップロードできます 
        .ListingPics__upload
          .PicsFrame
            %label.ClickLabel{for: ""}
              .FrameCentre
                %i.fas.fa-camera
                %p.FrameCentre__instructions クリックしてファイルをアップロード
        .ListingPics__hidden
          .HiddenField
            .Preview
              .Preview__upper
              .Preview__lower
                .Preview__lower__update
                  %span.PicUpdate 編集
                .Preview__lower__delete
                  %span.PicDelete 削除
      %hr.HorizontalRule          
      .Description
        .Description__name
          %label{for: "item_name"} 商品名
          %span.Required 必須
          %input{required: "required", placeholder: "40文字まで", type: "text", name: ""}
        .Description__text
          %label{for: ""} 商品の説明
          %span.Required 必須
          %textarea.Description__text-fill{required: "required", rows: "7", placeholder: "商品の説明（必須1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に１万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", name: ""}
        .Description__wordCount
          %span 0
          \/1000
      %hr.HorizontalRule  
      .Details
        %p.Details__title 商品の詳細
        .Categories
          %label{for: ""} カテゴリー
          %span.Required 必須
          %select.Categories__parent{required: "required", name: ""}
          %select.Categories__child{required: "required", name: ""}
          %select.Categories__grandChild{required: "required", name: ""}
        .Size
          %label{for: ""} サイズ
          %span.Required 必須
          %select{required: "required", name: ""}
        .Brands
          %label{for: ""} ブランド
          %span.Optional 任意
          %input{placeholder: "例）シャネル", type: "text", name: ""}
        .Condition
          %label{for: ""} 商品の状態
          %span.Required 必須
          %select{required: "required", name: ""}
      %hr.HorizontalRule
      .Shipping
        %p.Shipping__title 
          配送について
          %a{href: ""}  
            %i.far.fa-question-circle
        .Shipping__whoPays
          %label{for: ""} 配送料の負担
          %span.Required 必須
          %select{required: "required", name: ""}
        .Shipping__methods 
          %label{for: ""} 配送の方法
          %span.Required 必須
          %select{required: "required", name: ""}
        .Shipping__from
          %label{for: ""} 発送元の地域
          %span.Required 必須
          %select{required: "required", name: ""} 
        .Shipping__days
          %label{for: ""} 発送までの日数
          %span.Required 必須
          %select{required: "required", name: ""}    
      %hr.HorizontalRule
      .Prices
        %p.Prices__title 
          価格（¥300〜9,999,999）
          %a{href: ""}  
            %i.far.fa-question-circle
        .Prices__pricing
          .Prices__pricing__left
            %label{for: ""} 販売価格
            %span.Required 必須
          %span.YenMark ¥
          %input.Prices__pricing__right{type: "number", placeholder: "0", name: ""}  
        .Prices__salesCommission
          .Prices__salesCommission__left 販売手数料（10%）
          %span.Prices__salesCommission__right ー
        %hr.HorizontalRule
        .Prices__profit
          .Prices__profit__left 販売利益
          %span.Prices__profit__right ー
      .PutUp
        .PutUp__contents
          %input.NbtnPutup{type: "submit", name: "commit", value: "出品する"}
          %a.NbtnDraft{href: "#"} 下書きに保存
          %a.NbtnRtn{href: "/"} もどる
      .Agreement
        .Agreement__contents
          %p 
            禁止されている
            %a{href: ""} 行為 
            および 
            %a{href: ""} 出品物
            を必ずご確認ください。 
            %a{href: ""} 偽ブランド品
            や
            %a{href: ""} 盗品物
            などの販売は犯罪であり、法律により処罰される可能性があります。 
            また、出品をもちまして
            %a{href: ""} 加盟店規約 
            に同意したことになります。
  .ListingItems__footer
    = render "purchases/footer"