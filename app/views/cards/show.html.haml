.user
  = render "shared/header"
  .user__body
    .userbody__main
      .userbody__main__left
        = render "users/left_navi"
      .bodymain__right
        .payment-method
          %section.payment-method__title
            %h2 登録されているカードの情報
          .payment-method__card-list
            %section.payment-method__section
              .credit-card
                %icon.fas.fa-check-circle
                .credit-card__card-detail
                  = "**** **** **** " + @card_information.last4
                  %p 
                    有効期限
                    - exp_month = @card_information.exp_month.to_s
                    - exp_year = @card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                = link_to "削除", card_path, method: :delete, class: "credit-card__delete-btn"
            %section.payment-method__section.TAR
              = link_to "#" do
                %span 支払い方法について
                %icon.fas.fa-angle-right
  = render "shared/footer"
  .purchase-btn
    .purchase-btn--text 出品する
    = link_to (image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn--icon")
